<div class="container">
  <% if @user.pseudo %>
    <h1><%= @user.pseudo %></h1>
  <% else %>
    <h1><%= @user.email %></h1>
  <% end %>

    <p>Pseudo : <%= @user.pseudo %> </p>

    <% if @user == current_user %>
      <p>Email : <%= @user.email %> </p>
    <% end %>

    <p>Groupe : <%= @user.group.name %> </p>



  <% if @user == current_user %>
    <%= link_to 'Edit my profile', edit_user_path(@user), class: 'btn btn-success' %>
    <%= link_to 'Delete my profile', user_path(@user), method: :delete, class: 'btn btn-danger' %>
  <% end %>

  <h3>Pronostics</h3>

  <% @user.bets.each do |bet| %>
    <p>
      <%= bet.game.team1 %>
      <%= bet.score1bet %>
      -
      <%= bet.game.team2 %>
      <%= bet.score2bet %>


      <% if bet.user == current_user %>
        <%= link_to 'Change ton prono', edit_bet_path(bet) %> |
        <%= link_to 'Supprime ton prono', bet_path(bet), method: :delete %>
      <% end %>
    </p>
  <% end %>




</div>

